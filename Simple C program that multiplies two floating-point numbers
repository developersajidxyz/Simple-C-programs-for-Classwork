//Simple C program that multiplies two floating-point numbers
#include <stdio.h>

int main() {
    float num1, num2, Mult;
    
    // Taking two numbers in input
    printf("Enter the first floating number: ");
    scanf("%f", &num1);
    printf("Enter the second floating number: ");
    scanf("%f", &num2);

    // Multiply the two numbers
    Mult = num1 * num2;

    printf("The Multiplication of %.2f and %.2f is %.2f\n", num1, num2, Mult);

    return 0;
}
